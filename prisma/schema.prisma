generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id         Int     @id @default(autoincrement())
  title      String
  subtitle   String
  desc       String   @db.Text
  image      String
  slug       String   @unique
  watching   Int
  subImages  String[] // Array of sub image URLs
  paragraphs Json     // Store paragraphs as JSON array

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum TestimonialStatus {
  APPROVE
  REJECTED
  NEW
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  position  String
  comment   String   @db.Text
  image     String   // URL of the testimonial image
  status    TestimonialStatus @default(NEW)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  image       String
  content     Json

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Job {
  id            Int      @id @default(autoincrement())
  title         String
  level         String
  slug          String   @unique
  description   String   @db.Text
  qualifications Json     // Array of qualifications
  experience    Json     // Array of required experience
  offers        Json     // Array of offered benefits
  salary        String
  imageUrl      String

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum ShowAtType {
  PLANTATION
  GROUP
  TOURS
}

model TeamMember {
  id       Int      @id @default(autoincrement())
  name     String
  title    String
  bio      String   @db.Text
  imageUrl String
  showAt    ShowAtType[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Company {
  id      Int     @id @default(autoincrement())
  name    String
  logo    String
  bg      String
  link    String
  bgcolor String
  blank   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique       // Ensure emails are unique
  password  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
